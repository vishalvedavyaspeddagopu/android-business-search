<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reservations_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationsPage">

    <TextView
        android:id="@+id/noBookingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#E11F1F"
        android:visibility="invisible"
        android:textSize="30dp"
        android:text="No Bookings found!"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reservations_table" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservations_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>